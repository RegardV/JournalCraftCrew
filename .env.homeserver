# =============================================================================
# Journal Craft Crew - Homesever Environment Configuration
# =============================================================================

# Deployment Environment
NODE_ENV=production
ENVIRONMENT=homeserver

# Domain Configuration (update with your actual domain or local IP)
DOMAIN=localhost
API_DOMAIN=localhost
FRONTEND_URL=https://localhost:3000
BACKEND_URL=https://localhost:8000
ORCHESTRATOR_URL=http://localhost:5000

# API Configuration
VITE_API_URL=https://localhost:8000
VITE_APP_NAME=Journal Craft Crew
VITE_APP_VERSION=2.0.0

# Backend Configuration
CORS_ORIGINS=https://localhost:3000,https://localhost:5000
TRUSTED_HOSTS=localhost,127.0.0.1
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgresql://journal_user:secure_password_change_me@postgres:5432/journal_crew
POSTGRES_DB=journal_crew
POSTGRES_USER=journal_user
POSTGRES_PASSWORD=secure_password_change_me

# Redis Configuration
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=redis_password_change_me

# Authentication Configuration
SECRET_KEY=your-secret-key-change-me-in-production-32-characters-minimum
JWT_SECRET_KEY=your-jwt-secret-key-change-me-in-production-256-bits
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Firebase Configuration (replace with your actual Firebase config)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789
FIREBASE_APP_ID=1:123456789:web:abcdef

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# CrewAI Configuration
CREWAI_LLM_MODEL=gpt-4o-mini
CREWAI_MAX_ITERATIONS=25
CREWAI_CACHE_ENABLED=true
CREWAI_VERBOSE_LOGGING=false

# File Upload Configuration
MAX_UPLOAD_SIZE=50MB
UPLOAD_DIR=/app/uploads
PDF_OUTPUT_DIR=/app/outputs/pdfs
TEMP_DIR=/app/tmp

# Security Configuration
SECURE_COOKIES=true
SESSION_TIMEOUT=86400
RATE_LIMIT_PER_MINUTE=60
ENABLE_CSP=true

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/journal_crew.crt
SSL_KEY_PATH=/etc/ssl/private/journal_crew.key

# Docker Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_BACKEND_IMAGE=journal-backend:latest
DOCKER_FRONTEND_IMAGE=journal-frontend:latest

# Monitoring Configuration
ENABLE_MONITORING=true
METRICS_PORT=9090
LOG_LEVEL=INFO
ENABLE_HEALTH_CHECKS=true

# Backup Configuration
ENABLE_BACKUPS=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket

# Development Configuration (set to false in production)
ENABLE_DEBUG=false
ENABLE_SWAGGER=true
ENABLE_PROFILER=false