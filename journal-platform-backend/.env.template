# Journal Platform Backend - Environment Template
# INSTRUCTIONS: Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# =============================================================================
# üö® SECURITY CRITICAL üö® - REPLACE ALL PLACEHOLDER VALUES
# =============================================================================

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=6770

# =============================================================================
# üîê SECURITY KEYS & TOKENS - GENERATE SECURE VALUES
# =============================================================================

# Generate secure 32+ character random string:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=GENERATE_SECURE_32_CHAR_RANDOM_STRING_HERE

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# üóÑÔ∏è DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Database URL
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/journal_platform

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# üîë API KEYS - INSERT YOUR ACTUAL API KEYS
# =============================================================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-actual-openai-api-key-here

# =============================================================================
# üìß EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================

# Gmail SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_TLS=true
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password

# =============================================================================
# üõí AMAZON KDP CONFIGURATION (OPTIONAL)
# =============================================================================

# Amazon KDP API Keys - Get from Amazon Developer Console
KDP_ACCESS_KEY=your-kdp-access-key
KDP_SECRET_KEY=your-kdp-secret-key
KDP_MARKETPLACE=ATVPDKIKX0DER

# =============================================================================
# üîê OAUTH2 PROVIDERS (OPTIONAL)
# =============================================================================

# Google OAuth2 - Get from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth2 - Get from GitHub Developer Settings
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# üìä MONITORING (OPTIONAL)
# =============================================================================

# Sentry Error Tracking - Get from sentry.io
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# üîí PRODUCTION SECURITY SETTINGS
# =============================================================================

# CORS Origins - Update with your actual domain
CORS_ORIGINS=["https://yourdomain.com"]

# Allowed Hosts - Update with your actual domains
ALLOWED_HOSTS=["yourdomain.com", "www.yourdomain.com"]

# =============================================================================
# üìÅ FILE STORAGE SETTINGS
# =============================================================================

UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=52428800

# =============================================================================
# üöÄ SSL CONFIGURATION
# =============================================================================

# SSL Certificate Paths (for HTTPS)
SSL_CERT_PATH=/path/to/ssl/certificate.crt
SSL_KEY_PATH=/path/to/ssl/private.key

# =============================================================================
# üìù INSTRUCTIONS FOR USE
# =============================================================================

# 1. Copy this template: cp .env.template .env
# 2. Generate secure SECRET_KEY: python -c "import secrets; print(secrets.token_urlsafe(32))"
# 3. Replace ALL placeholder values with actual secure values
# 4. Add .env to .gitignore to prevent committing secrets
# 5. Set proper file permissions: chmod 600 .env
# 6. Never share or commit your actual .env file